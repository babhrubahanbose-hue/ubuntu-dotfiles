# files - unified file manager and tree viewer
# Usage:
#   files           - open ranger in current directory
#   files <path>    - open ranger in specified path
#   files -t [depth] [path]  - show tree view (default depth: 2)
#   files --tree [depth] [path]
files() {
    if [[ "$1" == "-t" || "$1" == "--tree" ]]; then
        shift
        local depth=2
        local target="."
        # Check if first arg is a number (depth)
        if [[ "$1" =~ ^[0-9]+$ ]]; then
            depth="$1"
            shift
        fi
        # Remaining arg is path
        [[ -n "$1" ]] && target="$1"
        tree -C -L "$depth" --dirsfirst "$target"
    else
        ranger "${1:-.}"
    fi
}

# ===================================================================
# == Python with Gaudi Virtual Environment
# ===================================================================
GAUDI_VENV="$HOME/gaudi/gaudi"
GAUDI_DIR="$HOME/gaudi"

# Auto-activate gaudi venv when entering gaudi directory tree
# This ensures ./script.py executions use the venv python
gaudi_auto_venv() {
    if [[ "$PWD" == "$GAUDI_DIR"* ]]; then
        # Inside gaudi directory - activate if not already
        if [[ "$VIRTUAL_ENV" != "$GAUDI_VENV" ]]; then
            source "$GAUDI_VENV/bin/activate"
        fi
    else
        # Outside gaudi directory - deactivate if gaudi venv is active
        if [[ "$VIRTUAL_ENV" == "$GAUDI_VENV" ]]; then
            deactivate
        fi
    fi
}

# Hook into directory changes
autoload -Uz add-zsh-hook
add-zsh-hook chpwd gaudi_auto_venv

# Also run on shell startup in case we start inside gaudi directory
gaudi_auto_venv

# Manually run python with gaudi venv (still useful for explicit calls)
python() {
    # Check if gaudi environment is already activated
    if [[ "$VIRTUAL_ENV" != "$GAUDI_VENV" ]]; then
        source "$GAUDI_VENV/bin/activate"
    fi

    # Run python3 with all arguments
    python3 "$@"
}

# Run python with sudo using the gaudi environment
# Usage: sudopython script.py [args...]
sudopython() {
    sudo "$HOME/gaudi/gaudi/bin/gaudi-python" "$@"
}

