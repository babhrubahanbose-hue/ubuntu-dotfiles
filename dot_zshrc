# Slideshow function using feh
slideshow() {
    local fullscreen=""
    local delay=""
    while getopts "ft:" opt; do
        case $opt in
            f) fullscreen="-F" ;;
            t) delay="-D $OPTARG" ;;
        esac
    done
    shift $((OPTIND - 1))
    OPTIND=1
    feh $fullscreen $delay --auto-zoom --randomize "$1"
}

# Size function - show directory sizes
# Usage:
#   size              - current directory, depth 1
#   size -d 2         - depth 2
#   size -s           - sorted by size
#   size -h           - include hidden files/dirs
#   size -d 2 -s -h ../some/path  - all options with custom path
size() {
    local depth=1
    local show_hidden=""
    local sort_by_size=false
    local target="."

    # Parse arguments
    while [[ $# -gt 0 ]]; do
        case $1 in
            -d)
                depth="$2"
                shift 2
                ;;
            -h)
                show_hidden="--all"
                shift
                ;;
            -s)
                sort_by_size=true
                shift
                ;;
            *)
                target="$1"
                shift
                ;;
        esac
    done

    # Build and execute command
    if [ "$sort_by_size" = true ]; then
        du $show_hidden --max-depth="$depth" "$target" | sort -h
    else
        du $show_hidden --max-depth="$depth" "$target"
    fi
}

